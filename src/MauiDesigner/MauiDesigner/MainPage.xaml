<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDesigner.MainPage">
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label
                x:Name="UpdateStatus"
                FontSize="54"
                TextColor="#512BD4"
                MinimumHeightRequest="300"
                HorizontalTextAlignment="Center">
                    Controleren op updates...
            </Label>
            <HorizontalStackLayout>
                <Editor
                    MinimumWidthRequest="1150"
                    x:Name="Editor"
                    Text="../../../../../../../../test.xaml"
                    Placeholder="No XAML loaded yet"></Editor>
                <Button
                    Clicked="BrowseFiles"
                    Text="Browse"
                    MinimumWidthRequest="100"></Button>
            </HorizontalStackLayout>
            <Button
                Clicked="Preview"
                Text="Preview">
            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
