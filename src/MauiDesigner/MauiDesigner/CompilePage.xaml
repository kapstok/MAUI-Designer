<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDesigner.CompilePage">
    <ContentPage.Content>
        <Grid
            RowDefinitions="Auto, *"
            Padding="30,0">
            
            <Button Grid.Row="0" Margin="0, 20, 0, 0" WidthRequest="100" Text="Recompile" Clicked="Button_OnClicked"></Button>
            
            <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Editor x:Name="Output" IsReadOnly="False" FontFamily="Courier" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Editor>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>